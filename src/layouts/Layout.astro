---
interface Props {
  title: string;
  fullWidth?: boolean;
}

const { title, fullWidth = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Explore the history of Hulme, Manchester through an interactive map and timeline" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <nav class="top-nav">
      <div class="nav-brand">
        <a href="/">Hulme History</a>
      </div>
      <div class="nav-links">
        <a href="/">Map</a>
        <a href="/archive">Archive</a>
        <a href="/about">About</a>
        <a href="/contact">Contact</a>
      </div>
    </nav>
    <main class:list={[{ 'full-width': fullWidth }]}>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  :root {
    --color-buildings: #7FBB71;
    --color-blocks: #CDCCCC;
    --color-community: #E8923F;
    --color-news: #F5D547;
    --color-bg: #f5f5f5;
    --color-text: #333;
    --nav-height: 50px;
  }

  html, body {
    height: 100%;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
    background: var(--color-bg);
    color: var(--color-text);
  }

  body {
    display: flex;
    flex-direction: column;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  main {
    flex: 1;
    padding: 1rem;
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  main.full-width {
    max-width: none;
    padding: 0;
    margin: 0;
  }
</style>

<style>
  .top-nav {
    position: sticky;
    top: 0;
    z-index: 1000;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #333;
    color: white;
    padding: 0 1rem;
    height: var(--nav-height);
  }

  .nav-brand a {
    font-weight: bold;
    font-size: 1.2rem;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
  }

  .nav-links a:hover {
    text-decoration: underline;
  }
</style>
