---
interface Props {
  decades: Record<number, Array<{
    id: string;
    data: {
      start: number;
      title: string;
      desc?: string;
      timeline?: string;
    };
  }>>;
}

const { decades } = Astro.props;
---

<aside id="sidebar">
  <div id="timeline">
    {Object.entries(decades).sort(([a], [b]) => Number(a) - Number(b)).map(([decade, decadeEvents]) => (
      <div class="decade">
        <div class="decade-label">{decade}<span class="decade-suffix">s</span></div>
        {decadeEvents.map(event => {
          const eventId = event.id.replace('/index', '').replace('.md', '');
          return (
            <div
              class={`event ${event.data.timeline || 'buildings'}`}
              data-id={eventId}
              data-year={event.data.start}
            >
              <div class="event-cover" data-event-id={eventId}></div>
              <div class="event-content">
                <span class="event-year">{event.data.start}</span>
                <span class="event-title">{event.data.title}</span>
                {event.data.desc && (
                  <span class="event-desc">{event.data.desc}</span>
                )}
              </div>
              <div class="event-accent"></div>
            </div>
          );
        })}
      </div>
    ))}
  </div>
</aside>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=Source+Serif+4:ital,wght@0,400;1,400&display=swap');

  #sidebar {
    width: 340px;
    display: flex;
    flex-direction: column;
    background:
      linear-gradient(180deg, rgba(250, 247, 242, 0.95) 0%, rgba(245, 240, 232, 0.92) 100%);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-right: 1px solid rgba(160, 145, 125, 0.4);
    box-shadow: 4px 0 24px rgba(60, 45, 30, 0.12);
    flex-shrink: 0;
  }

  #timeline {
    flex: 1;
    overflow-y: auto;
    padding: 16px 14px;
    scrollbar-width: thin;
    scrollbar-color: rgba(139, 115, 85, 0.4) transparent;
  }

  #timeline::-webkit-scrollbar {
    width: 6px;
  }

  #timeline::-webkit-scrollbar-thumb {
    background: rgba(139, 115, 85, 0.4);
    border-radius: 3px;
  }

  .decade {
    margin-bottom: 20px;
    position: relative;
  }

  .decade-label {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 0.85rem;
    font-weight: 700;
    color: #6d5a45;
    letter-spacing: 0.15em;
    padding: 4px 0 8px 0;
    margin-bottom: 10px;
    border-bottom: 2px solid rgba(139, 115, 85, 0.25);
    position: relative;
  }

  .decade-label::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 40px;
    height: 2px;
    background: #8b7355;
  }

  .decade-suffix {
    font-size: 0.65rem;
    vertical-align: baseline;
    opacity: 0.7;
  }

  .event {
    position: relative;
    margin-bottom: 8px;
    background:
      linear-gradient(135deg, rgba(255, 253, 250, 0.95) 0%, rgba(252, 249, 244, 0.9) 100%);
    border-radius: 0 6px 6px 0;
    cursor: pointer;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
    border: 1px solid rgba(180, 165, 145, 0.25);
    border-left: none;
    box-shadow:
      0 1px 3px rgba(80, 60, 40, 0.06),
      inset 0 1px 0 rgba(255, 255, 255, 0.8);
  }

  .event::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: #9a9a9a;
    transition: all 0.2s ease;
  }

  .event:hover {
    background:
      linear-gradient(135deg, rgba(255, 255, 255, 0.98) 0%, rgba(255, 252, 248, 0.95) 100%);
    transform: translateX(3px);
    box-shadow:
      0 4px 12px rgba(80, 60, 40, 0.12),
      inset 0 1px 0 rgba(255, 255, 255, 0.9);
  }

  .event:hover::before {
    width: 5px;
  }

  .event:global(.active) {
    background: rgba(255, 255, 255, 0.98);
    box-shadow:
      0 6px 20px rgba(80, 60, 40, 0.15),
      inset 0 1px 0 rgba(255, 255, 255, 1);
    transform: translateX(4px);
  }

  .event:global(.active)::before {
    width: 6px;
  }

  /* Category colors */
  .event.buildings::before { background: linear-gradient(180deg, #6a9a5a, #4a7a3a); }
  .event.community::before { background: linear-gradient(180deg, #d4954c, #b4753c); }
  .event.news::before { background: linear-gradient(180deg, #d4b84c, #b4983c); }

  /* Cover image peek */
  .event-cover {
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    width: 70px;
    background-size: cover;
    background-position: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    mask-image: linear-gradient(to left, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0) 100%);
    -webkit-mask-image: linear-gradient(to left, rgba(0,0,0,0.4) 0%, rgba(0,0,0,0) 100%);
    filter: sepia(30%) saturate(80%);
  }

  .event:hover .event-cover,
  .event:global(.active) .event-cover {
    opacity: 1;
  }

  .event-content {
    position: relative;
    padding: 10px 12px 10px 14px;
    z-index: 2;
  }

  .event-year {
    display: inline-block;
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 0.7rem;
    font-weight: 700;
    color: #fff;
    background: linear-gradient(135deg, #8b7355, #6d5a45);
    padding: 2px 8px 2px 6px;
    margin-left: -14px;
    margin-bottom: 6px;
    border-radius: 0 3px 3px 0;
    box-shadow: 1px 1px 3px rgba(0,0,0,0.15);
    letter-spacing: 0.05em;
    position: relative;
  }

  .event-year::before {
    content: '';
    position: absolute;
    left: 0;
    top: -3px;
    border-left: 4px solid transparent;
    border-bottom: 3px solid #5a4535;
  }

  .event-title {
    display: block;
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.05rem;
    font-weight: 600;
    color: #2d2418;
    line-height: 1.3;
    margin-bottom: 4px;
    padding-right: 50px;
  }

  .event-desc {
    display: block;
    font-family: 'Source Serif 4', Georgia, serif;
    font-size: 0.78rem;
    font-style: italic;
    color: #6a5d50;
    line-height: 1.4;
    padding-right: 60px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  /* Subtle paper texture overlay */
  .event-accent {
    position: absolute;
    inset: 0;
    background:
      url("data:image/svg+xml,%3Csvg viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    opacity: 0.02;
    pointer-events: none;
    mix-blend-mode: multiply;
  }

  @media (max-width: 900px) {
    #sidebar {
      width: 300px;
    }
  }

  @media (max-width: 800px) {
    #sidebar {
      width: 100%;
      max-height: 40vh;
    }

    .event-cover {
      width: 50px;
    }

    .event-title {
      padding-right: 40px;
    }

    .event-desc {
      padding-right: 45px;
    }
  }
</style>

<script>
  // Load cover images for events
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.event-cover').forEach(async (el) => {
      const eventId = (el as HTMLElement).dataset.eventId;
      if (!eventId) return;

      // Try jpg first, then png
      const jpgUrl = `/events/${eventId}/cover.jpg`;
      const pngUrl = `/events/${eventId}/cover.png`;

      try {
        const jpgRes = await fetch(jpgUrl, { method: 'HEAD' });
        if (jpgRes.ok) {
          (el as HTMLElement).style.backgroundImage = `url(${jpgUrl})`;
          return;
        }

        const pngRes = await fetch(pngUrl, { method: 'HEAD' });
        if (pngRes.ok) {
          (el as HTMLElement).style.backgroundImage = `url(${pngUrl})`;
        }
      } catch (e) {
        // No cover image
      }
    });
  });
</script>
