---
interface Props {
  decades: Record<number, Array<{
    id: string;
    data: {
      start: number;
      title: string;
      timeline?: string;
    };
  }>>;
}

const { decades } = Astro.props;
---

<aside id="sidebar">
  <header>
    <h1>Hulme History</h1>
    <p class="era-display">
      <span id="current-year">1860</span> Â· <span id="current-era">Victorian Hulme</span>
    </p>
  </header>
  <div id="timeline">
    {Object.entries(decades).sort(([a], [b]) => Number(a) - Number(b)).map(([decade, decadeEvents]) => (
      <div class="decade">
        <div class="decade-label">{decade}s</div>
        {decadeEvents.map(event => (
          <div
            class={`event ${event.data.timeline || 'buildings'}`}
            data-id={event.id.replace('.md', '')}
            data-year={event.data.start}
          >
            <span class="event-year">{event.data.start}</span>
            <span class="event-title">{event.data.title}</span>
          </div>
        ))}
      </div>
    ))}
  </div>
</aside>

<style>
  #sidebar {
    width: 260px;
    display: flex;
    flex-direction: column;
    background: rgba(245, 243, 240, 0.88);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-right: 1px solid rgba(180, 170, 155, 0.3);
    box-shadow: 2px 0 16px rgba(0, 0, 0, 0.1);
    flex-shrink: 0;
  }

  header {
    padding: 20px;
    border-bottom: 1px solid rgba(180, 170, 155, 0.4);
    background: rgba(255, 255, 255, 0.6);
  }

  h1 {
    margin: 0 0 4px 0;
    font-size: 1.4rem;
    font-weight: 600;
    color: #2a2520;
    letter-spacing: -0.02em;
  }

  .era-display {
    margin: 0;
    font-size: 0.8rem;
    color: #8b7355;
  }

  #timeline {
    flex: 1;
    overflow-y: auto;
    padding: 12px;
  }

  .decade {
    margin-bottom: 12px;
  }

  .decade-label {
    font-size: 0.7rem;
    font-weight: 700;
    color: #8b7355;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding-bottom: 6px;
    margin-bottom: 6px;
    border-bottom: 1px solid rgba(180, 170, 155, 0.5);
  }

  .event {
    padding: 8px 10px;
    margin-bottom: 3px;
    background: rgba(255, 255, 255, 0.7);
    border-left: 3px solid #aaa;
    cursor: pointer;
    transition: all 0.15s ease;
    border-radius: 0 4px 4px 0;
  }

  .event:hover {
    background: rgba(255, 255, 255, 0.95);
    transform: translateX(2px);
  }

  .event:global(.active) {
    background: rgba(255, 255, 255, 0.98);
    box-shadow: 0 2px 8px rgba(0,0,0,0.12);
    border-left-width: 4px;
  }

  .event.buildings { border-left-color: #5a8a4a; }
  .event.community { border-left-color: #c4854c; }
  .event.news { border-left-color: #c4a84c; }

  .event-year {
    display: block;
    font-size: 0.65rem;
    color: #888;
    margin-bottom: 1px;
  }

  .event-title {
    display: block;
    font-size: 0.85rem;
    color: #333;
    line-height: 1.25;
  }

  @media (max-width: 800px) {
    #sidebar {
      max-height: 40vh;
    }
  }
</style>
