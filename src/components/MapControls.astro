---
// Map controls - traced layer toggles and historical slider

interface TracedLayer {
  year: string;
  color: string;
}

const tracedLayers: TracedLayer[] = [
  { year: '1871', color: '#8b5a2b' },
  { year: '1990', color: '#4a5a6a' },
];
---

<div id="map-controls">
  <div id="traced-toggles">
    <span class="control-label">Traced Maps</span>
    {tracedLayers.map(layer => (
      <button
        data-traced={layer.year}
        class="traced-btn"
        style={`--btn-color: ${layer.color}`}
      >
        {layer.year}
      </button>
    ))}
  </div>

  <div id="os-slider-container">
    <span class="control-label">Historical Base Maps</span>
    <input type="range" id="os-slider" min="0" max="100" value="0" />
    <div class="slider-labels">
      <span>1890s</span>
      <span>1940s</span>
      <span>2014</span>
      <span>Now</span>
    </div>
  </div>
</div>

<style>
  #map-controls {
    position: absolute;
    top: 16px;
    right: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    z-index: 10;
  }

  .control-label {
    display: block;
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(255,255,255,0.6);
    margin-bottom: 6px;
  }

  /* Traced map toggles */
  #traced-toggles {
    background: rgba(20, 20, 20, 0.9);
    padding: 10px 12px;
    border-radius: 6px;
    border: 1px solid rgba(255,255,255,0.1);
  }

  #traced-toggles .control-label {
    margin-bottom: 8px;
  }

  .traced-btn {
    padding: 6px 12px;
    background: rgba(60, 60, 60, 0.8);
    border: 2px solid transparent;
    color: #999;
    font-size: 0.75rem;
    cursor: pointer;
    border-radius: 4px;
    margin-right: 4px;
    transition: all 0.15s;
  }

  .traced-btn:hover {
    background: rgba(80, 80, 80, 0.9);
    color: #fff;
  }

  .traced-btn:global(.active) {
    background: var(--btn-color);
    border-color: var(--btn-color);
    color: #fff;
  }

  /* OS Slider */
  #os-slider-container {
    background: rgba(20, 20, 20, 0.9);
    padding: 10px 12px 8px;
    border-radius: 6px;
    border: 1px solid rgba(255,255,255,0.1);
    min-width: 220px;
  }

  #os-slider {
    width: 100%;
    height: 8px;
    -webkit-appearance: none;
    appearance: none;
    background: linear-gradient(to right, #8b5a2b 0%, #5a5a70 33%, #2d5a3d 66%, #555 100%);
    border-radius: 4px;
    cursor: pointer;
    margin: 8px 0 6px;
  }

  #os-slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    width: 18px;
    height: 18px;
    background: #fff;
    border-radius: 50%;
    cursor: grab;
    box-shadow: 0 2px 6px rgba(0,0,0,0.5);
  }

  #os-slider::-moz-range-thumb {
    width: 18px;
    height: 18px;
    background: #fff;
    border-radius: 50%;
    cursor: grab;
    border: none;
    box-shadow: 0 2px 6px rgba(0,0,0,0.5);
  }

  .slider-labels {
    display: flex;
    justify-content: space-between;
    padding: 0 2px;
  }

  .slider-labels span {
    font-size: 0.7rem;
    color: rgba(255,255,255,0.6);
  }

  @media (max-width: 800px) {
    #map-controls {
      top: 8px;
      right: 8px;
      left: 8px;
      flex-direction: row;
      flex-wrap: wrap;
      gap: 8px;
    }

    #traced-toggles,
    #os-slider-container {
      padding: 8px 10px;
    }

    #os-slider-container {
      min-width: 150px;
      flex: 1;
    }

    .traced-btn {
      padding: 4px 8px;
      font-size: 0.7rem;
    }
  }
</style>
