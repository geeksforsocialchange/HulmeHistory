---
// Map controls - traced layer toggles and historical slider

interface TracedLayer {
  year: string;
  color: string;
}

const tracedLayers: TracedLayer[] = [
  { year: '1871', color: '#8b5a2b' },
  { year: '1990', color: '#4a5a6a' },
];
---

<div id="map-controls">
  <div id="zoom-slot"></div>

  <div id="traced-toggles">
    <span class="control-label">Traced Maps</span>
    {tracedLayers.map(layer => (
      <button
        data-traced={layer.year}
        class="traced-btn"
        style={`--btn-color: ${layer.color}`}
      >
        {layer.year}
      </button>
    ))}
  </div>

  <div id="os-slider-container">
    <span class="control-label">Base Maps</span>
    <input type="range" id="os-slider" min="0" max="100" value="0" />
    <div class="slider-labels">
      <span>1890s</span>
      <span>1940s</span>
      <span>2014</span>
      <span>Now</span>
    </div>
  </div>

  <div id="credit-slot"></div>
</div>

<style>
  #map-controls {
    position: absolute;
    bottom: 12px;
    left: 12px;
    display: grid;
    grid-template-columns: auto auto auto;
    grid-template-rows: auto auto;
    gap: 5px;
    z-index: 10;
  }

  #zoom-slot {
    grid-column: 1;
    grid-row: 1 / 3;
    align-self: start;
  }

  #traced-toggles {
    grid-column: 2;
    grid-row: 1;
    align-self: start;
  }

  #os-slider-container {
    grid-column: 3;
    grid-row: 1;
    align-self: start;
  }

  #credit-slot {
    grid-column: 2 / 4;
    grid-row: 2;
    font-size: 9px;
    color: #555;
    background: rgba(255, 255, 255, 0.85);
    padding: 4px 10px;
    border-radius: 4px;
  }

  .control-label {
    display: block;
    font-size: 0.6rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(60, 50, 40, 0.9);
    margin-bottom: 5px;
    font-weight: 600;
  }

  /* Traced map toggles */
  #traced-toggles {
    background: rgba(250, 248, 245, 0.92);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    padding: 10px 12px;
    border-radius: 6px;
    border: 1px solid rgba(180, 170, 155, 0.3);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    min-height: 72px;
    box-sizing: border-box;
  }

  #traced-toggles .control-label {
    margin-bottom: 6px;
  }

  .traced-btn {
    padding: 5px 10px;
    background: rgba(255, 255, 255, 0.7);
    border: 2px solid rgba(180, 170, 155, 0.4);
    color: #666;
    font-size: 0.7rem;
    font-weight: 500;
    cursor: pointer;
    border-radius: 4px;
    margin-right: 4px;
    transition: all 0.15s;
  }

  .traced-btn:hover {
    background: rgba(255, 255, 255, 0.95);
    color: #333;
    border-color: rgba(140, 130, 115, 0.6);
  }

  .traced-btn:global(.active) {
    background: var(--btn-color);
    border-color: var(--btn-color);
    color: #fff;
  }

  /* OS Slider */
  #os-slider-container {
    background: rgba(250, 248, 245, 0.92);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    padding: 10px 12px;
    border-radius: 6px;
    border: 1px solid rgba(180, 170, 155, 0.3);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    min-width: 200px;
    min-height: 72px;
    box-sizing: border-box;
  }

  #os-slider {
    width: 100%;
    height: 6px;
    -webkit-appearance: none;
    appearance: none;
    background: linear-gradient(to right, #a07040 0%, #6a6a7a 33%, #4a7a5a 66%, #888 100%);
    border-radius: 3px;
    cursor: pointer;
    margin: 6px 0 5px;
  }

  #os-slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    width: 16px;
    height: 16px;
    background: #fff;
    border-radius: 50%;
    cursor: grab;
    box-shadow: 0 1px 4px rgba(0,0,0,0.3);
    border: 1px solid rgba(0,0,0,0.1);
  }

  #os-slider::-moz-range-thumb {
    width: 16px;
    height: 16px;
    background: #fff;
    border-radius: 50%;
    cursor: grab;
    border: 1px solid rgba(0,0,0,0.1);
    box-shadow: 0 1px 4px rgba(0,0,0,0.3);
  }

  .slider-labels {
    display: flex;
    justify-content: space-between;
    padding: 0 2px;
  }

  .slider-labels span {
    font-size: 0.65rem;
    color: rgba(80, 70, 60, 0.7);
  }

</style>
